<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".form.SlidePages.Reepontos.PremiosFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codResg"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginStart="80dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textSize="18sp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnResgatar"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@id/codResg"
        app:cornerRadius="0dp"
        android:textSize="16sp"
        android:text="RESGATAR"
        />

    <TextView
        android:id="@+id/txtLoja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOJA"
        android:layout_below="@+id/codResg"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:textSize="27sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/premios"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/txtLoja"
        android:layout_marginTop="16dp"/>

</RelativeLayout>